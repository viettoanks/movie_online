<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Movies <%= link_to new_admin_movie_path, 
    								class: "btn btn-info btn-outline pull-right" do %>
      <i class="fa fa-plus"></i> News
    <% end %></h1>
  </div>

  <!-- /.col-lg-12 -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".panel_heading" %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
              <div class="col-sm-12">
                <table width="100%" class="table table-striped table-bordered
                  table-hover table-responsive dataTable no-footer dtr-inline responsive"
                  id="dataTables-hotel" role="grid" aria-describedby="dataTables-hotel_info" style="width: 100%;">
                  <thead>
                    <tr role="row">
                      <th tabindex="0">
                        Id
                      </th>
                      <th tabindex="1">
                        Name
                      </th>
                      <th tabindex="2">
                        Alternative name
                      </th>
                      <th tabindex="3">
                        Public date
                      </th>
                      <th tabindex="4">
                        Country
                      </th>
                      <th tabindex="5">
                        Movie type
                      </th>
                      <th tabindex="6">
                        Trailer
                      </th>
                      <th tabindex="7">
                        Poster
                      </th>
                      <th tabindex="8">
                        View count
                      </th>
                      <th tabindex="9">
                        Description
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @movies %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>
