<h2 class="text-center mt-3">
  <%= t ".edit_profile" %>
</h2>
<div class="container col-md-6 my-3">
  <%= form_for resource, as: resource_name,
    url: registration_path(resource_name), html: {method: :put} do |f| %>
    <%= devise_error_messages! %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :email, class:"font-weight-bold" %>
        <%= f.email_field :email, autocomplete: "email",
          class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :name, class: "font-weight-bold" %>
        <%= f.text_field :name, autocomplete: "name",
          class: "form-control"%>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <%= f.label :phone, class: "font-weight-bold" %>
        <%= f.text_field :phone, autocomplete: "phone", class: "form-control"%>
      </div>
      <div class="form-group col-md-8">
        <%= f.label :address, class: "font-weight-bold" %>
        <%= f.text_field :address, autocomplete: "address",
          class: "form-control"%>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>
      <%= t ".current_wait_for" %>
      <%= resource.unconfirmed_email %>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, class: "font-weight-bold" %> 
      <i>(<%= t ".leave_blank_if_dont_change" %>)</i>
      <%= f.password_field :password, autocomplete: "new-password",
        class:"form-control" %>
      <% if @minimum_password_length %>
        <em>
          <%= t ".minimum_password_length",
            min_length:@minimum_password_length %>
        </em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "font-weight-bold" %>
      <%= f.password_field :password_confirmation,
        autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, class: "font-weight-bold" %>
      <i>(<%= t ".current_password_confirmation" %>)</i>
      <%= f.password_field :current_password,
        autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t(".submit"),class: "btn btn-success btn-block" %>
    </div>
  <% end %>

  <div class="my-3 text-center">
    <p>
      <h3 class="my-3"><%= t ".cancel_account" %></h3>
      <div class="my-3"><%= t ".unhappy" %></div>
      <%= button_to  t(".cancel_account"), registration_path(resource_name),
        data: {confirm: t(".confirm-delete")}, method: :delete,
        class: "btn btn-light btn-block" %>
    </p>

    <%= link_to t(".back"), :back, class: "btn btn-secondary btn-block" %>
  </div>
</div>
